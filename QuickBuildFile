name: libepoxy
slug: project-portable/libepoxy

build:
  configure: meson
  make: ninja

dependencies:
  apt:
    - libegl1-mesa-dev
    - xutils-dev
    - libx11-dev
    - libegl1-mesa-dev
    - libgles2-mesa
    - libsdl2-dev

  download:
    - https://raw.githubusercontent.com/probonopd/uploadtool/master/upload.sh
    
steps:
  after:
    - ls
    - bash upload.sh libepoxy.tar.gz
